<!DOCTYPE html>
<html lang="es">
<!-- HEAD HTML-->
<%- include('./partials/head') %> 

<body>
    <div class="container-fluid">
      <!-- HEADER -->
      <%- include('./partials/header') %>
        <!-- MENU DE ESCRITORIO -->
        <%- include('./partials/navbar')%> 
        <!-- CARROUSEL -->
        <div class="carrousel row">
            <div id="carouselExampleControls" class="carousel slide col-12" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img class="d-block w-100 img-fluid" src="/images/slide/1.jpg" alt="First slide">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100 img-fluid" src="/images/slide/2.jpg" alt="Second slide">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100 img-fluid" src="/images/slide/3.jpg" alt="Third slide">
                  </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
        </div>
        <!-- PRODUCT CARDS -->
        <section class="row justify-content-around">
          <!-- TITTLE PRODUCT -->
          <div class="titulo-product col-12">
            <h5 class="estilo-fuente-1">üéÆJUEGOS  <mark class="estilo-fuente-2">RECOMENDADOS</mark></h5>
            <hr>
          </div>
          
          



          <!--CAJA 1-->
          <%recomendados.forEach(recomendado => { %>
          <section class="card col-dm-3">
            <div class="card" style="width: 18rem;">
              <img class="card-img-top" src="/images/product-games/<%= recomendado.image %> " alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><%= recomendado.name %></h5>
                <hr>
                <p class="card-text">
                  <strong>Fecha de estreno inicial: </strong> <%= recomendado.release_date %>
                  <hr>
                  <strong>Desarrollador: </strong><%= recomendado.distributor %>
                  <hr>
                  <strong>Plataformas: </strong><%= recomendado.platform %>
                  <hr>
                  </p>
                    <strong class="precio">$<%= recomendado.price %></strong>
                    <hr>
                <a href="/products/detail/<%= recomendado.id %>" class="btn btn-primary offset-4">Comprar</a>
              </div>
            </div>
          </section>
          <%})%>
          <!-- TOP VENTAS -->
          <div class="row justify-content-around" id="top-venta">
            <!-- TITTLE PRODUCT -->
            <div class="titulo-product col-12">
              <h5 class="estilo-fuente-1">ü•áTOP  <mark class="estilo-fuente-2">MAS COMPRADOS</mark></h5>
              <hr>
            </div>
            <!--CAJA 1-->

           


            <% for( let i = 0; i < vendidos.length; i++ ) { %>
              <section class="card col-dm-3">
                <div class="card" style="width: 18rem;">
                  <img class="card-img-top" src="/images/product-games/<%= vendidos[i].image %>" alt="Card image cap">
                  <div class="card-body">
                    <h5 class="card-title"><%= vendidos[i].name %></h5>
                    <hr>
                    <p class="card-text">
                      <strong>Fecha de estreno inicial: </strong> <%= vendidos[i].release_date %>
                      <hr>
                      <strong>Desarrollador: </strong><%= vendidos[i].distributor %>
                      <hr>
                      <strong>Plataformas: </strong><%= vendidos[i].platform %>
                      <hr>
                      </p>
                      
                      
                      
                          <strong class="precio">$<%= vendidos[i].price %></strong>
                        <hr>
                    <a href="/products/detail/<%= vendidos[i].id %>" class="btn btn-primary offset-4">Comprar</a>
                  </div>
                </div>
              </section>
              <% } %>
              


           
            </div>
          <!--OFERTAS-->
          <div class="titulo-product col-12">
            <h5 class="estilo-fuente-1">üè¥‚Äç‚ò†Ô∏èOFERTAS <mark class="estilo-fuente-2">SEMANALES</mark></h5>
            <hr>
          </div>

          <!--CAJA 1-->
          <% for( let i = 0; i < ofertas.length; i++ ) { %>
          
            <section class="card col-dm-3">
                <div class="card" style="width: 18rem;">
                  <img class="card-img-top" src="/images/product-games/<%= ofertas[i].image %>" alt="Card image cap">
                  <div class="card-body">
                    <h5 class="card-title"><%= ofertas[i].name %></h5>
                    <hr>
                    <p class="card-text">
                      <strong>Fecha de estreno inicial: </strong> <%= ofertas[i].release_date %>
                      <hr>
                      <strong>Desarrollador: </strong><%= ofertas[i].distributor %>
                      <hr>
                      <strong>Serie: </strong><%= ofertas[i].name %>
                      <hr>
                      <strong>Plataformas: </strong><%= ofertas[i].platform %>
                      <hr>
                      </p>
                      
                    
                      
                      
  
  
  
  
  
  
                      
                        <strong class="precio">
                          
                          
                          $<%= ofertas[i].price %>

                          

                        </strong>
                        <hr>
                    <a href="/products/detail/<%= ofertas[i].id %>" class="btn btn-primary offset-4">Comprar</a>
                  </div>
                </div>
              </section>
          <% } %>



            
        </section>
        <%- include('./partials/footer') %> 

    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>

</html>
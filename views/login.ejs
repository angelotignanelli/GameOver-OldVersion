    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Login</title>
    <script
        src="https://use.fontawesome.com/releases/v5.13.0/js/all.js"
    ></script>
</head>
<body>
    <div class="container">
        <header>
            <div class="logo">
                <img src="/images/logo.png" alt="logo" id="logo">
            </div>
            <div class="menu">
                <nav>
                    <ul>
                        <li><a href="">Home</a></li>
                        <li><a href="">Catalogo</a>
                            <ul class="submenu">
                                <li><a href="">Mercandising</a></li>
                                <li><a href="">Accesorios</a></li>
                                <li class="videojuegos"><a href="">VideoJuegos <strong>></strong></a>
                                    <ul>
                                        <li><a href="">Accion</a></li>
                                        <li><a href="">Aventura</a></li>
                                        <li><a href="">Conduccion</a></li>
                                        <li><a href="">Deportes</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                        <li><a href="">Fan Zone</a></li>
                        <li><a href="">Carrito</a></li>
                        <li><a href="">Login</a></li>
                    </ul>
                </nav>
            </div>
            <div class="buscador">
                <label for="buscador">
                    <i class="fas fa-search" id="lupa"></i>
                    <input type="search" name="buscador" id="buscador" placeholder="¿Que desea buscar?">
                    <input type="submit" value="ENVIAR" id="enviar">
                </label>
            </div>
        </header>
        <div class="wrapper-main">  
            <div class="tittle">
                <h1>LOGIN</h1>
            </div>
        <div class="box">
            <h2>Informacion de usuario</h2>
            <div class="form-group">
                <label id="user-label" for="username">Usuario</label>
                <input type="text" name="usuario" id="usuario" class="form-control" placeholder="Ingresa tu usuario" required="">
            </div>
            <div class="form-group">
                <label id="password-label" for="password">Contraseña</label>
                <input type="text" name="password" id="password" class="form-control" placeholder="Ingresa tu contraseña" required="">
            </div>
            <button type="login" id="login" class="login-button">
                Iniciar Sesion
                </button>
        </div>

            
        <footer>
            <ul class="pestanias">
                <li><a href=""> Inicio</a></li>

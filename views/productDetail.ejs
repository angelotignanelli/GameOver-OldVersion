  <div class="container-fluid">
    <!-- HEADER -->
    <%- include('./partials/header') %>
    <!-- MENU -->
    <%- include('./partials/navbar') %>
    <!-- Video -->
    <div class="row">
     <iframe class="col-12" id="video-demo" height="215vh" src="<%= producto.videoProduct %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <!-- SECCION SOBRE LA INFO DEL JUEGO-->
    <section class="section row justify-content-around">
      <!-- LOGO IMG-->
      <div class="section__logo col-12 col-md-5 col-lg-3">
        <img src="/images/product-games/logo/<%=producto.logoProduct %>" alt="logo producto" class="section__logoimg img-fluid">
      </div>
      <!-- INFORMACION-->
      <div class="section__info col-11 col-lg-3 d-flex justify-content-center m-4">
        <%= producto.description %> 
      </div>
      <!-- ESPECIFICACION -->
      <div class="section__especificaciones col-11 col-md-4 col-lg-4">
        <ul>
          <li><strong class="section__strong">LANZAMIENTO:</strong> <%=producto.release_date%></li>
          <hr>
          <li><strong class="section__strong">DESARROLLADOR:</strong> <%=producto.distributor%></li>
          <hr>
          <li><strong class="section__strong">EDITOR:</strong> <%=producto.developer%></li>
          <hr>
          <li><strong class="section__strong">PLATAFORMAS:</strong> <%=producto.platform%></li>
          <hr>
          <li><strong class="section__strong">RATING ESRB:</strong> <%=producto.age_clasification%></li>
          <hr>
          <li><strong class="section__strong">PRECIO:</strong> $<%=producto.price%></li>
